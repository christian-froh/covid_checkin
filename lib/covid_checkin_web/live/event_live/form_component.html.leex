<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "event-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :name %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, :max_attendees, "Max Teilnehmer" %>
  <%= number_input f, :max_attendees %>
  <%= error_tag f, :max_attendees %>

  <%= submit "Erstelle Event", phx_disable_with: "Speichere...", class: "button" %>
</form>
